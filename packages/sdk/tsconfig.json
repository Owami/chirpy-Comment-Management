{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@chirpy-dev/tsconfigs/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": false,
    "declaration": true,
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "lib",
    "paths": {
      "$/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
